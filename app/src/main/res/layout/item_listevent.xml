<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_marginLeft="@dimen/main_page_margin"
    android:layout_marginRight="@dimen/main_page_margin"
    android:orientation="horizontal"
    android:background="@drawable/curve_background"
    android:elevation="8dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/list_poster"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pos_rotaract"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/pos_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:fontFamily="@font/roboto_bold"
            android:lines="2"
            android:ellipsize="end"
            android:text="Project Management is being on hot now. Co.."
            android:textSize="20sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/pos_heldByClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="by Rotaract club"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"/>
            <TextView
                android:id="@+id/pos_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Jun 11th"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location"/>
            <TextView
                android:id="@+id/pos_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="B1#107"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>