<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:alpha="0.8">
    <LinearLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/info_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swimming club"
            android:textColor="#ffff"
             android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp" />
        <TextView
            android:id="@+id/info_club_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Good club"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/info_btn_wa"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/dialog_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WhatsApp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:background="#ffff"/>
        <Button
            android:id="@+id/info_btn_email"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/dialog_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000000"
            android:background="#ffff"/>


    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:elevation="3dp"
        android:id="@+id/info_club_avatar"
        android:background="@drawable/background_circle_white"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/logo"
        android:padding="14dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>