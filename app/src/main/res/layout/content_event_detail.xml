<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:lines="1"
            android:maxLines="3"
            android:ems="10"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Pygmalion" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_clock" />


            <TextView
                android:id="@+id/event_time"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:inputType="date"
                android:text="3:00 pm - 5:00 pm"/>

            <TextView
                android:id="@+id/event_day"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:inputType="date"
                tools:text="03/07/2019" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_clock" />


            <TextView
                android:id="@+id/event_location"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:inputType="date"
                android:text="Block A1#G03"/>


        </LinearLayout>



        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Art is a diverse range of human activities in creating visual, auditory or performing artifacts (artworks), expressing the author's imaginative, conceptual ideas, or technical skill, intended to be appreciated for their beauty or emotional power.[1][2] In their most general form these activities include the production of works of art, the criticism of art, the study of the history of art, and the aesthetic dissemination of art."
            android:textColor="#2E2B2B"
            android:textSize="20sp"
            android:textStyle="italic" />

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
