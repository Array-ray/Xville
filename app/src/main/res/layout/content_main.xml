<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".fragment.MeFragment"
    tools:showIn="@layout/fragment_me">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/avatar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jimmy"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#FF9800"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="25dp"
            android:text="July"
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="2019"
            android:textColor="#6D6C6C"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f5">
            //Activity1
             <RelativeLayout
                 android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="20dp"
                 android:background="@drawable/curve_background">
                 <RelativeLayout
                     android:id="@+id/org"
                     android:layout_width="30dp"
                     android:layout_height="150dp"
                     android:background="#FF9800"
                     android:layout_margin="15dp">
                 </RelativeLayout>
                     <TextView
                         android:id="@+id/text1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_toEndOf="@id/org"
                         android:layout_toRightOf="@id/org"
                         android:text="@string/aboutToolBsr"
                         android:textAllCaps="true"
                         android:layout_marginTop="20dp"
                         android:textStyle="bold"
                         android:textSize="20sp"
                         android:textColor="#000000"/>
                 <TextView
                     android:layout_below="@id/text1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/g"
                     android:layout_toEndOf="@id/org"
                     android:layout_toRightOf="@id/org"
                     android:layout_marginTop="10dp"
                     android:textColor="#757575"
                     android:textSize="13sp"
                     android:textStyle="bold"/>


             </RelativeLayout>
            //Activity2
            <RelativeLayout
                android:id="@+id/two"
                android:layout_below="@id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/curve_background">
                <RelativeLayout
                    android:id="@+id/thi"
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:background="#FF9800"
                    android:layout_margin="15dp">
                </RelativeLayout>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/thi"
                    android:layout_toRightOf="@id/thi"
                    android:text="@string/aboutToolBsr"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_below="@id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/g"
                    android:layout_toEndOf="@id/thi"
                    android:layout_toRightOf="@id/thi"
                    android:layout_marginTop="10dp"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </RelativeLayout>
          //Activity3
            <RelativeLayout
                android:id="@+id/three"
                android:layout_below="@id/two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/curve_background">
                <RelativeLayout
                    android:id="@+id/pur"
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:background="#FF9800"
                    android:layout_margin="15dp">
                </RelativeLayout>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/pur"
                    android:layout_toRightOf="@id/pur"
                    android:text="@string/aboutToolBsr"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_below="@id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/g"
                    android:layout_toEndOf="@id/pur"
                    android:layout_toRightOf="@id/pur"
                    android:layout_marginTop="10dp"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </RelativeLayout>
            //Activity4
            <RelativeLayout
                android:id="@+id/four"
                android:layout_below="@id/three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/curve_background">
                <RelativeLayout
                    android:id="@+id/fou"
                    android:layout_width="30dp"
                    android:layout_height="150dp"
                    android:background="#FF9800"
                    android:layout_margin="15dp">
                </RelativeLayout>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/fou"
                    android:layout_toRightOf="@id/fou"
                    android:text="@string/aboutToolBsr"
                    android:textAllCaps="true"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_below="@id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/g"
                    android:layout_toEndOf="@id/fou"
                    android:layout_toRightOf="@id/fou"
                    android:layout_marginTop="10dp"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>




</android.support.design.widget.CoordinatorLayout>
