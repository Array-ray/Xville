<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xville_v1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CreateEventActivity"></activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".authentication.RegisterActivity" />
        <activity android:name=".authentication.GuideRoleActivity"/>
        <activity android:name=".authentication.LoginAsClub"/>
        <activity android:name=".authentication.RegisterAsClub"/>
        <activity android:name=".EventDetailActivity"/>
        <activity android:name=".ClubMainActivity"/>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>